#include <iostream>

using namespace std;

int main()
{
    int r,g,b;
    cin >> r >> g >> b;
    int mx=0,q;
    int m = min(r,min(g,b));
    for(int i = 0 ; i < 3 && i <= m ; i++)
    {
        q=i;
        q+=r/3+g/3+b/3;
        q+=min(r--%3,min(g--%3,b--%3));
        mx=max(mx,q);
    }
    cout << mx;
    return 0;
}
